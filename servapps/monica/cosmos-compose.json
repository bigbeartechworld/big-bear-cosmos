{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "monica:4.1.2",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "APP_KEY=80356f7073c4f7834187b25a9d32cd2a",
        "DB_HOST=big-bear-monica-db",
        "DB_USERNAME=usermonica",
        "DB_PASSWORD=passwordmonica"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/monica/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/monica/DATA/AppData/$AppID/storage",
          "target": "/var/www/html/storage",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:80",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
