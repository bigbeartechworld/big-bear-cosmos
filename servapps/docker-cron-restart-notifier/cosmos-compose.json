{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "deduard/tools:restart-notifier-latest",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "DISCORD_WEBHOOK_URL=",
        "RESTART_CONTAINERS=app_1,app_2",
        "RUN_ON_STARTUP=false",
        "CRON_SCHEDULE=0 4 * * FRI"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/docker-cron-restart-notifier/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/docker-cron-restart-notifier/var/run/docker.sock",
          "target": "/var/run/docker.sock",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
