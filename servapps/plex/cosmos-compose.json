{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "linuxserver/plex:1.42.2",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "PUID=1000",
        "PGID=1000",
        "TZ=Etc/UTC",
        "VERSION=docker",
        "PLEX_CLAIM="
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/plex/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/plex/DATA/AppData/$AppID/config",
          "target": "/config",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/plex/DATA/AppData/$AppID/tv",
          "target": "/tv",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/plex/DATA/AppData/$AppID/movies",
          "target": "/movies",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:32400",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
