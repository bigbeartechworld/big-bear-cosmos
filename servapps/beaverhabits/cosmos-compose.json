{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "daya0576/beaverhabits:0.7.3",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "HABITS_STORAGE=USER_DISK",
        "TRUSTED_LOCAL_EMAIL=your@email.com",
        "INDEX_HABIT_DATE_COLUMNS=5",
        "ENABLE_IOS_STANDALONE=true"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/beaverhabits/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/beaverhabits/DATA/AppData/$AppID/.user",
          "target": "/app/.user/",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:8080",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
