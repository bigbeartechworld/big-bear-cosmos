{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "libretranslate/libretranslate:v1.7.3",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "LT_API_KEYS=true",
        "LT_API_KEYS_DB_PATH=/app/db/api_keys.db",
        "LT_UPDATE_MODELS=true",
        "LT_LOAD_ONLY=en,fr,es,de,it,pt,ru,ja,zh"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/libretranslate/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/libretranslate/DATA/AppData/$AppID/db",
          "target": "/app/db",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/libretranslate/DATA/AppData/$AppID/.local:/home/libretranslate/.local",
          "target": "rw",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:5000",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
