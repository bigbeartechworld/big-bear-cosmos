{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "jokobsk/netalertx:25.10.1",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "TZ=UTC",
        "PORT=8080",
        "ALWAYS_FRESH_INSTALL=false"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/netalertx/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/netalertx/DATA/AppData/$AppID/config",
          "target": "/app/config",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/netalertx/DATA/AppData/$AppID/db",
          "target": "/app/db",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:8080",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
