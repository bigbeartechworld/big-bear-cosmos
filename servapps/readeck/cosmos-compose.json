{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "codeberg.org/readeck/readeck:0.20.4",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "READECK_LOG_LEVEL=info",
        "READECK_SERVER_HOST=0.0.0.0",
        "READECK_SERVER_PORT=8000",
        "READECK_LOG_FORMAT=text"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/readeck/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/readeck/DATA/AppData/$AppID/data",
          "target": "/readeck",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:8000",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
