{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "joplin/server:3.4.3",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "APP_PORT=22300",
        "APP_BASE_URL=http://localhost:22300",
        "DB_CLIENT=pg",
        "POSTGRES_PASSWORD=27a1d42a-a15d-43dd-903c-2a73538647fe",
        "POSTGRES_USER=bigbear",
        "POSTGRES_DATABASE=joplin",
        "POSTGRES_PORT=5432",
        "POSTGRES_HOST=big-bear-joplin-db",
        "MAX_TIME_DRIFT=0"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/joplin/icon.png"
      },
      "volumes": [
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:22300",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
