{
  "cosmos-installer": {
    "routes": [
        {
          "name": "Syncthing",
          "description": "Web UI",
          "useHost": true,
          "target": "http://syncthing:8384",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "BlockAPIAbuse": true
        }
      ],
    "services": {
      "syncthing": {
  "container_name": "big-bear-syncthing",
  "image": "syncthing/syncthing:2.0",
  "restart": "unless-stopped",
  "volumes": [
    "syncthing_data:/var/syncthing",
    "syncthing_media_data_syncthing:/media/data/syncthing"
  ],
  "ports": [
    "8384:8384",
    "22000:22000/tcp",
    "22000:22000/udp",
    "21027:21027/udp"
  ],
  "environment": [
    "PUID=1000",
    "PGID=1000"
  ],
  "stop_grace_period": "1m"
}
    }
  }
}
