{
  "cosmos-installer": {
    "routes": [
        {
          "name": "Mailpit",
          "description": "Web UI",
          "useHost": true,
          "target": "http://mailpit:8025",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "BlockAPIAbuse": true
        }
      ],
    "services": {
      "mailpit": {
  "image": "axllent/mailpit:v1.28",
  "container_name": "mailpit",
  "restart": "unless-stopped",
  "volumes": [
    "big-bear-mailpit_data:/data"
  ],
  "environment": [
    "TZ=UTC"
  ],
  "ports": [
    "8025:8025",
    "1025:1025"
  ]
}
    }
  }
}
