{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "ghcr.io/goauthentik/server:2025.8.4",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "AUTHENTIK_REDIS__HOST=big-bear-authentik-redis",
        "AUTHENTIK_POSTGRESQL__HOST=big-bear-authentik-db",
        "AUTHENTIK_POSTGRESQL__USER=authentik",
        "AUTHENTIK_POSTGRESQL__NAME=authentik",
        "AUTHENTIK_POSTGRESQL__PASSWORD=authentik-password",
        "AUTHENTIK_SECRET_KEY=changeme"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/authentik/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/authentik/DATA/AppData/$AppID/data/authentik-media",
          "target": "/media",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/authentik/DATA/AppData/$AppID/data/authentik-custom-templates",
          "target": "/templates",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:9443",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
