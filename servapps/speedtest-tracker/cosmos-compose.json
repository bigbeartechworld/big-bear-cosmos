{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "linuxserver/speedtest-tracker:1.6.8",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "PUID=1000",
        "PGID=1000",
        "DB_CONNECTION=mysql",
        "DB_HOST=big-bear-speedtest-tracker-db",
        "DB_PORT=3306",
        "DB_DATABASE=speedtest_tracker",
        "DB_USERNAME=casaos",
        "DB_PASSWORD=casaos",
        "TZ=America/Chicago"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/speedtest-tracker/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/speedtest-tracker/etc/localtime:/etc/localtime",
          "target": "ro",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/speedtest-tracker/DATA/AppData/$AppID/config",
          "target": "/config",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/speedtest-tracker/DATA/AppData/$AppID/web",
          "target": "/etc/ssl/web",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:80",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
