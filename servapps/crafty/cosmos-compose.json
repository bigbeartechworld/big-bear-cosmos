{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "registry.gitlab.com/crafty-controller/crafty-4:4.5.5",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "TZ=UTC"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/crafty/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/crafty/DATA/AppData/$AppID/data/backups",
          "target": "/crafty/backups",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/crafty/DATA/AppData/$AppID/data/logs",
          "target": "/crafty/logs",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/crafty/DATA/AppData/$AppID/data/servers",
          "target": "/crafty/servers",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/crafty/DATA/AppData/$AppID/data/config",
          "target": "/crafty/app/config",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/crafty/DATA/AppData/$AppID/data/import",
          "target": "/crafty/import",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:8443",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
