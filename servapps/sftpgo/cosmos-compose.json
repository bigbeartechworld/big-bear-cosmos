{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "drakkan/sftpgo:v2.7",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "SFTPGO_HTTPD_BINDINGS_0_PORT=8080",
        "SFTPGO_HTTPD_BINDINGS_0_ADDRESS=0.0.0.0",
        "SFTPGO_DATA_PROVIDER_CREATE_DEFAULT_ADMIN=true",
        "SFTPGO_WEBDAVD_BINDINGS_0_PORT=10080",
        "SFTPGO_FTPD_BINDINGS_0_PORT=2121",
        "SFTPGO_FTPD_BINDINGS_0_FORCE_PASSIVE_IP='127.0.0.1:8080'"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/sftpgo/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/sftpgo/DATA/AppData/$AppID/srv",
          "target": "/srv/sftpgo",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/sftpgo/DATA/AppData/$AppID/data",
          "target": "/var/lib/sftpgo",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:8080",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
