{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "binwiederhier/ntfy:v2.14.0",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "TZ=UTC"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/ntfysh/icon.png"
      },
      "volumes": [
        {
          "source": "{ServiceName}-type",
          "target": " bind",
          "type": "volume"
        },
        {
          "source": "{ServiceName}-source",
          "target": " /DATA/AppData/$AppID/cache",
          "type": "volume"
        },
        {
          "source": "{ServiceName}-target",
          "target": " /var/cache/ntfy",
          "type": "volume"
        },
        {
          "source": "{ServiceName}-type",
          "target": " bind",
          "type": "volume"
        },
        {
          "source": "{ServiceName}-source",
          "target": " /DATA/AppData/$AppID/config",
          "type": "volume"
        },
        {
          "source": "{ServiceName}-target",
          "target": " /etc/ntfy",
          "type": "volume"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:7200",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
