{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "lmscommunity/lyrionmusicserver:9.1.0",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "HTTP_PORT=9000"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/lyrionmusicserver/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/lyrionmusicserver/DATA/AppData/$AppID/config:/config",
          "target": "rw",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/lyrionmusicserver/DATA/AppData/$AppID/music:/music",
          "target": "ro",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/lyrionmusicserver/DATA/AppData/$AppID/playlists:/playlist",
          "target": "rw",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/lyrionmusicserver/etc/localtime:/etc/localtime",
          "target": "ro",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/lyrionmusicserver/etc/timezone:/etc/timezone",
          "target": "ro",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:9000",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
