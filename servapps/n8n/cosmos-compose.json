{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "n8nio/n8n:1.117.0",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "DB_TYPE=postgresdb",
        "DB_POSTGRESDB_DATABASE=n8n",
        "DB_POSTGRESDB_HOST=db-n8n",
        "DB_POSTGRESDB_PORT=5432",
        "DB_POSTGRESDB_USER=bigbearcasaos",
        "DB_POSTGRESDB_PASSWORD=bigbearcasaos"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/n8n/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/n8n/DATA/AppData/$AppID/.n8n",
          "target": "/home/node/.n8n",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:5678",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
