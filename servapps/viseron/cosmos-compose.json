{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "roflcoopter/viseron:3.3.1",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "PUID=1000",
        "PGID=1000"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/viseron/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/viseron/DATA/AppData/$AppID/segments",
          "target": "/segments",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/viseron/DATA/AppData/$AppID/snapshots",
          "target": "/snapshots",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/viseron/DATA/AppData/$AppID/thumbnails",
          "target": "/thumbnails",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/viseron/DATA/AppData/$AppID/event_clips",
          "target": "/event_clips",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/viseron/DATA/AppData/$AppID/config",
          "target": "/config",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/viseron/etc/localtime:/etc/localtime",
          "target": "ro",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:8888",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
