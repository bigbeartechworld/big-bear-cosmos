{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "jacklul/pihole:2025.08.0",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "TZ=UTC",
        "FTLCONF_webserver_api_password=your_password",
        "BLOCKLISTS_URL=https://v.firebog.net/hosts/lists.php?type=tick",
        "REGEX_BLACKLIST_URL=https://raw.githubusercontent.com/mmotti/pihole-regex/master/regex.list"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/pihole-updatelists/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/pihole-updatelists/DATA/AppData/$AppID/etc",
          "target": "/etc/pihole/",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/pihole-updatelists/DATA/AppData/$AppID/etc/pihole-updatelists",
          "target": "/etc/pihole-updatelists/",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/pihole-updatelists/DATA/AppData/$AppID/dnsmasq.d",
          "target": "/etc/dnsmasq.d/",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:53",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
