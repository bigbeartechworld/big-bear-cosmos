{
  "cosmos-installer": {
    "routes": [
        {
          "name": "Ayon",
          "description": "Web UI",
          "useHost": true,
          "target": "http://ayon:5000",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "BlockAPIAbuse": true
        }
      ],
    "services": {
      "ayon": {
  "container_name": "big-bear-ayon",
  "image": "ynput/ayon:1.3.6-20240823",
  "restart": "unless-stopped",
  "healthcheck": {
    "test": [
      "CMD",
      "curl",
      "-f",
      "http://localhost:5000/api/info"
    ],
    "interval": "10s",
    "timeout": "2s",
    "retries": "3"
  },
  "volumes": [
    "ayon_addons:/addons",
    "ayon_storage:/storage",
    "/etc/localtime:/etc/localtime:ro"
  ],
  "ports": [
    "5000:5000"
  ],
  "expose": [
    "5000"
  ],
  "networks": [
    "big-bear-ayon-network"
  ],
  "depends_on": {
    "postgres": {
      "condition": "service_healthy"
    },
    "redis": {
      "condition": "service_started"
    }
  }
}
    }
  }
}
