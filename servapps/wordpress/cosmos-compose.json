{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "wordpress:6.8.3",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "WORDPRESS_DB_HOST=db",
        "WORDPRESS_DB_USER=casaos",
        "WORDPRESS_DB_PASSWORD=casaos",
        "WORDPRESS_DB_NAME=wordpress"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/wordpress/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/wordpress/DATA/AppData/$AppID/html",
          "target": "/var/www/html",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:80",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
