{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "linuxserver/adguardhome-sync:0.8.1",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "PUID=1000",
        "PGID=1000",
        "TZ=Etc/UTC",
        "LOG_LEVEL=info",
        "ORIGIN_URL=https://192.168.1.2:3000",
        "ORIGIN_USERNAME=bigbear",
        "ORIGIN_PASSWORD=casaos",
        "REPLICA_URL=https://192.168.1.3:3000",
        "REPLICA_USERNAME=bigbear",
        "REPLICA_PASSWORD=casaos",
        "CRON=\"0 */2 * * *\"",
        "RUN_ON_START=true",
        "API_PORT=8080"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/ls-adguardhome-sync/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/ls-adguardhome-sync/DATA/AppData/$AppID/config",
          "target": "/config",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:8080",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
