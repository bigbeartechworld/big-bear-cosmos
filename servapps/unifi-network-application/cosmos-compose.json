{
  "cosmos-installer": {},
  "minVersion": "0.9.0",
  "services": {
    "{ServiceName}": {
      "image": "linuxserver/unifi-network-application:8.0.26",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "environment": [
        "PUID=1000",
        "PGID=1000",
        "TZ=ETC/UTC",
        "MONGO_HOST=big-bear-unifi-db",
        "MONGO_USER=unifi",
        "MONGO_PASS=unifi_password",
        "MONGO_PORT=27017",
        "MONGO_DBNAME=unifi",
        "MEM_LIMIT=1024",
        "MEM_STARTUP=1024",
        "MONGO_TLS=",
        "MONGO_AUTHSOURCE="
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://github.com/walkxcode/dashboard-icons/blob/main/png/unifi.png?raw=true"
      },
      "volumes": [
        {
          "source": "{ServiceName}-config",
          "target": "/config",
          "type": "volume"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:8443",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
