{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "linuxserver/bookstack:25.07.20250804",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "APP_KEY=base64:3w/hRS2HYVFH5tJqD9AFlyurTh8mBByMKeMRyH9kEEQ=",
        "APP_URL=http://[change to your IP]:8080",
        "DB_HOST=big-bear-bookstack-db",
        "DB_USERNAME=bigbear",
        "DB_PASSWORD=a3e8949f-484c-4877-afdb-391f892f9bb6",
        "DB_DATABASE=bookstackapp"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/bookstack/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/bookstack/DATA/AppData/$AppID/config",
          "target": "/config",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:80",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
