{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "ghcr.io/tandoorrecipes/recipes:2.3.3",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "SECRET_KEY=6496f725-e4a4-4fa5-9f7b-db0114bc1568",
        "DB_ENGINE=django.db.backends.postgresql",
        "POSTGRES_HOST=big-bear-tandoor-db",
        "POSTGRES_PORT=5432",
        "POSTGRES_USER=tandoor",
        "POSTGRES_PASSWORD=100c7d31-9ec5-44ec-9101-e226c8e2420d",
        "POSTGRES_DB=tandoordb"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/tandoor/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/tandoor/DATA/AppData/$AppID/staticfiles",
          "target": "/opt/recipes/staticfiles",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/tandoor/DATA/AppData/$AppID/mediafiles",
          "target": "/opt/recipes/mediafiles",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:8080",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
