{
  "cosmos-installer": {
    "routes": [
        {
          "name": "WireGuard Easy v15",
          "description": "Web UI",
          "useHost": true,
          "target": "http://wg-easy-v15:51821",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "BlockAPIAbuse": true
        }
      ],
    "services": {
      "wg-easy-v15": {
  "container_name": "big-bear-wg-easy-v15",
  "image": "ghcr.io/wg-easy/wg-easy:15",
  "restart": "unless-stopped",
  "environment": {
    "INIT_ENABLED": "true",
    "INIT_USERNAME": "bigbear",
    "INIT_PASSWORD": "changeme",
    "INIT_HOST": "[YOUR_PUBLIC_IP]",
    "INIT_PORT": "51820",
    "INIT_DNS": "1.1.1.1,8.8.8.8",
    "INIT_IPV4_CIDR": "10.8.0.0/24",
    "INIT_IPV6_CIDR": "fd42:42:42::/64"
  },
  "cap_add": [
    "NET_ADMIN",
    "SYS_MODULE"
  ],
  "sysctls": [
    "net.ipv4.conf.all.src_valid_mark=1",
    "net.ipv4.ip_forward=1",
    "net.ipv6.conf.all.disable_ipv6=0",
    "net.ipv6.conf.all.forwarding=1",
    "net.ipv6.conf.default.forwarding=1"
  ],
  "volumes": [
    "big-bear-wg-easy-v15_data:/etc/wireguard"
  ],
  "ports": [
    "51820:51820/udp",
    "51821:51821/tcp"
  ]
}
    }
  }
}
