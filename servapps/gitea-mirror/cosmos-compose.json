{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "ghcr.io/raylabshq/gitea-mirror:v3.8.10",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "NODE_ENV=production",
        "DATABASE_URL=file:data/gitea-mirror.db",
        "HOST=0.0.0.0",
        "PORT=4321",
        "BETTER_AUTH_URL=http://0.0.0.0:4321",
        "BETTER_AUTH_SECRET=your-secret-key-change-this-in-production"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/gitea-mirror/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/gitea-mirror/DATA/AppData/$AppID/data",
          "target": "/app/data",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:4321",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
