{
  "cosmos-installer": {},
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "ghcr.io/home-assistant/home-assistant:2025.10.4",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/servapps/home-assistant/icon.png"
      },
      "volumes": [
        {
          "source": "{DefaultDataPath}/home-assistant/DATA/AppData/$AppID/config",
          "target": "/config",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/home-assistant/etc/localtime:/etc/localtime",
          "target": "ro",
          "type": "bind"
        },
        {
          "source": "{DefaultDataPath}/home-assistant/run/dbus:/run/dbus",
          "target": "ro",
          "type": "bind"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:8123",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
